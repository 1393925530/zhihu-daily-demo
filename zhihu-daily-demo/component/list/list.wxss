.list-container {
  width: 100%;
  height: auto;
  padding-bottom: 20px
}

.list {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.word-container {
  display: flex;
  flex-direction: column;
  margin-right: 10px;
  width: calc(100% - 70px);
}

.title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 18px;
}

.image {
  width: 70px;
  height: 70px;
  border-radius: 4px;
}