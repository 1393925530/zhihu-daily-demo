/**index.wxss**/
.title {
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 45px;
}

.title-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 40px;
  padding: 0 20px;
  border-right: 2px solid rgba(0, 0, 0, 0.377);
}

.title-day {
  display: block;
  font-size: 18px;
  font-weight: 600;
}

.title-month {
  font-size: 12px;
}

.title-logo {
  display: inline;
  font-size: 26px;
  font-weight: bold;
  padding-left: 20px;
}

.user-logo {
  position: absolute;
  right: 20px;
  width: 30px;
  height: 30px;
  border-radius: 50%;
}

.swiper-container {
  position: relative;
  width: 100%;
  margin-top: 45px;
}

.swiper-item {
  position: absolute;
  bottom: 40px;
  padding-left: 20px;
}

.swiper-item-title {
  font-size: 20px;
  font-weight: bold;
}

.swiper-item-author {
  font-size: 14px;
}