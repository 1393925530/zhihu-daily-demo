/**index.wxss**/
page {
  height: cals(100% - 45px);
  width: 100%;
}
.container {
  height: 100%;
  width: 100%;
}
.title {
  box-sizing: border-box;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 45px;
  padding-bottom: 10px;
  background: #fff;
  z-index: 1;
}

.title-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 40px;
  padding: 0 20px;
  border-right: 2px solid rgba(0, 0, 0, 0.377);
}

.title-day {
  display: block;
  font-size: 18px;
  font-weight: 600;
}

.title-month {
  font-size: 12px;
}

.title-logo {
  display: inline;
  font-size: 26px;
  font-weight: bold;
  padding-left: 20px;
}

.user-logo {
  position: absolute;
  right: 20px;
  width: 30px;
  height: 30px;
  border-radius: 50%;
}

.main-container {
  height: calc(100% - 45px);
  overflow-y: scroll;
  margin-top: 45px;
}

.swiper-container {
  position: relative;
  width: 100%;
}

.swiper {
  height: 320px;
}

.swiper-item {
  position: absolute;
  bottom: 40px;
  padding-left: 20px;
  color: #fff;
}

.swiper-item-title {
  font-size: 20px;
  font-weight: bold;
}

.swiper-item-author {
  font-size: 14px;
}

.list-container {
  box-sizing: border-box;
  width: 100%;
  height: auto;
  padding: 20px;
}