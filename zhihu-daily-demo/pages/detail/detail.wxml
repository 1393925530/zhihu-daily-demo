<view class="container">
  <view class="title-container" style="background-image: url('{{detail.image}}'); background-size: 100% 100%">
    <view class="title">
      {{detail.title}}
    </view>
  </view>
  <view class="author">
    <text>作者 / {{hint}}</text>
  </view>
  <view class="article-container">
    <rich-text nodes="{{detail.body}}"></rich-text>
  </view>
  <view class="menu">
    <view class="back" bindtap="return">返回</view>
  </view>
</view>