page {
  height: 100%;
  width: 100%;
}

.container {
  height: 100%;
  width: 100%;
}

.title-container {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: 320px;
  padding: 20px;
  background-position: center;
  background-size: 100% 100%;
}

.title {
  position: absolute;
  bottom: 20px;
  width: calc(100% - 60px);
  font-size: 20px;
  color: #fff;
  letter-spacing: 1px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.author {
  width: 100%;
  margin: 20px;
  font-size: 16px;
  color: rgba(0, 0, 0, 0.315);
}

.menu {
  position: fixed;
  display: flex;
  align-items: center;
  padding-left: 15px;
  bottom: 0;
  width: 100%;
  height: 50px;
  background: #f0f0f0;
}

.back {
  font-size: 20px;
  font-weight: bold;
}